[user]
  name = Ben Lu
  email = ayroblu@gmail.com
[merge]
  tool = vimdiff
[color]
  ui = true
[alias]
  ci = commit -am
  ll = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr - %cd) %C(bold blue)<%an>%Creset' -10 -U0 --stat
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr - %ad) %C(bold blue)<%an>%Creset' -500
  lf = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr - %ad) %C(bold blue)<%an>%Creset' --author-date-order  --no-merges --first-parent -500
  md = diff master...HEAD
  p = push origin HEAD
  pu = push -u origin HEAD
  s = status
  m = merge --no-ff
  d = difftool
  tc = rev-list -n 1
  # Removes deleted branches from cache: https://stackoverflow.com/questions/32147093/git-delete-remotes-remote-refs-do-not-exist
  pbranch = fetch -p origin
  changes = diff master...HEAD
[core]
  pager = less -+$LESS -R
  excludesfile = /Users/blu/.gitignore_global
[push]
  default = matching

# git reset HEAD~
# git push -f origin HEAD^:master
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[diff]
  tool = vimdiff
[mergetool]
  keepBackup = false
